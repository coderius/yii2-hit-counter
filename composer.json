{
    "name": "coderius/yii2-hit-counter",
    "description": "yii2 hit counter",
    "keywords": [
        "hit counter", 
        "yii2",
        "analitycs",
        "module",
        "yii2-modules",
        "yii2-extension",
        "visitor-counter",
        "hits"
    ],
    "type": "yii2-extension",
    "license": "MIT",
    "authors": [
        {
            "name": "Serg Coderius",
            "email": "sunrise4fun@gmail.com",
            "role": "Developer"
        }
    ],
    
    "require": {
        "mockery/mockery": "^1.2",
        "php": ">=7.4.0",
        "yiisoft/yii2": "^2.0.45",
        "matomo/device-detector": "^6.0"
   },
    "require-dev": {
        "phpunit/phpunit": "~9.5.0"
    },
    "autoload": {
        "psr-4": {
            "coderius\\hitCounter\\": "src"
        }
    },

    "config": {
        "allow-plugins": {
            "yiisoft/yii2-composer" : true
        },
        "process-timeout": 1800,
        "fxp-asset": {
            "enabled": false
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ]
}
