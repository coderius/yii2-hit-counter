{
    "name": "coderius/yii2-hit-counter",
    "description": "yii2 hit counter",
    "keywords": [
        "hit counter", 
        "yii2",
        "analitycs",
        "module",
        "yii2-modules",
        "yii2-extension",
        "visitor-counter",
        "hits"
    ],
    "type": "yii2-extension",
    "license": "MIT",
    "authors": [
        {
            "name": "Serg Coderius",
            "email": "sunrise4fun@gmail.com",
            "role": "Developer"
        }
    ],
    
    "require": {
        "php": ">=5.6.0",
        "yiisoft/yii2": "^2.0",
        "piwik/device-detector": "~3.12",
        "mockery/mockery": "^1.2"
   },
    "require-dev": {
        "phpunit/phpunit": "^5"
    },
    "autoload": {
        "psr-4": {
            "coderius\\hitCounter\\": "src"
        }
    },

    "config": {
        "fxp-asset": {
            "installer-paths": {
              "npm-asset-library": "vendor/npm",
              "bower-asset-library": "vendor/bower"
            }
        },    
        "process-timeout": 1800
    }

}
